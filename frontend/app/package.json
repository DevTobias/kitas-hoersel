{
  "name": "@modules/app",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "engineStrict": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:svelte typesafe-i18n",
    "dev:svelte": "vite dev",
    "build": "svelte-kit sync && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --plugin-search-dir . --check . && eslint .",
    "format": "prettier --ignore-path .gitignore --plugin-search-dir . --write . && eslint . --fix",
    "typesafe-i18n": "typesafe-i18n"
  },
  "devDependencies": {
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@modules/eslint-config": "^1.0.0",
    "@modules/prettier-config": "^1.0.0",
    "@modules/ui-system": "^1.0.0",
    "@sveltejs/adapter-node": "^1.1.4",
    "@sveltejs/kit": "^1.3.2",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.13",
    "mdsvex": "^0.10.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "rehype-slug": "^5.1.0",
    "sass": "^1.57.1",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-preprocess": "^5.0.1",
    "tailwindcss": "^3.2.4",
    "tslib": "^2.5.0",
    "typesafe-i18n": "^5.20.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-imagetools": "^4.0.17"
  },
  "prettier": "@modules/prettier-config",
  "eslintConfig": {
    "extends": [
      "@modules/eslint-config"
    ]
  }
}
