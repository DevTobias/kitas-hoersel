{
  "name": "@modules/app",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "engineStrict": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:svelte typesafe-i18n",
    "dev:svelte": "vite dev --host",
    "build": "svelte-kit sync && vite build && yarn esbuild-tweaks",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --plugin-search-dir . --check . && eslint .",
    "format": "prettier --ignore-path .gitignore --plugin-search-dir . --write . && eslint . --fix",
    "typesafe-i18n": "typesafe-i18n",
    "esbuild-tweaks": "node ../modules/esbuild-tweaks/index.js"
  },
  "dependencies": {
    "html-minifier-terser": "^7.1.0"
  },
  "devDependencies": {
    "@modules/esbuild-tweaks": "^1.0.0",
    "@modules/eslint-config": "^1.0.0",
    "@modules/prettier-config": "^1.0.0",
    "@modules/ui-system": "^1.0.0",
    "@sveltejs/adapter-node": "^1.2.0",
    "@sveltejs/kit": "^1.8.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/html-minifier-terser": "^7.0.0",
    "@zerodevx/svelte-img": "^1.2.6",
    "autoprefixer": "^10.4.13",
    "mdsvex": "^0.10.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "rehype-slug": "^5.1.0",
    "sass": "^1.58.3",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.4",
    "svelte-preprocess": "^5.0.1",
    "tailwindcss": "^3.2.7",
    "tslib": "^2.5.0",
    "typesafe-i18n": "^5.24.1",
    "typescript": "^4.9.5",
    "vanilla-lazyload": "^17.8.3",
    "vite": "^4.1.4",
    "zod": "^3.20.6"
  },
  "prettier": "@modules/prettier-config",
  "eslintConfig": {
    "extends": [
      "@modules/eslint-config"
    ]
  }
}
